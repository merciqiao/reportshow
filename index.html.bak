<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
 <head> 
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" /> 
  <meta http-equiv="Access-Control-Allow-Origin" content="*" /> 
  <meta http-equiv="X-UA-Compatible" content="IE=edge" /> 
  <meta name="viewport" content="width=device-width, initial-scale=1" /> 
  <title>征信报告查询</title> 
  <link href="css/bootstrap.css" rel="stylesheet" type="text/css" /> 
  <link href="css/css.css" rel="stylesheet" type="text/css" /> 
  <script type="text/javascript" src="js/jquery.min.js"></script> 
  <script type="text/javascript" src="js/bootstrap.min.js"></script> 
   <script type="text/javascript" src="js/template-web.js"></script> 
 </head> 
 <body class="bg"> 
  <div class="seach">
   <form class="form-inline"> 
    <div class="form-group"> 
     <label for="id_num">身份证号：</label> 
     <input type="text" class="form-control" id="id_num" placeholder="请输入身份证号" value="510202196910315521" /> 
    </div> 
    <a class="btn btn-default" id="getList">开始检索</a> 
   </form> 
  </div> 
  <div class="container" align="center"> 

 <div id="templateDiv"></div>
    <script type="text/template" id="template">  
  <table class="table table-bordered table-hover table-striped"> 
    <thead> 
     <tr> 
      <th>报告编号</th> 
      <th>姓名</th> 
      <th>证件号码</th> 
      <th>报告请求时间</th> 
      <th>报告时间</th> 
      <th>文档名称</th> 
      <th>解析时间</th> 
      <th>报告类型</th> 
      <th>阿里云上传地址</th> 
      <th>信报查看</th> 
     </tr> 
    </thead> 
    
    <tbody> 
     {{each data}}
     <tr> 
      <td>{{$value.reportNo}}</td>  
       <td>{{$value.baseInfo.name}}</td> 
      <td>{{$value.baseInfo.idcard}}</td> 
      <td>{{$value.strRequestDateTime}}</td> 
      <td>{{$value.strGenerateDateTime}}</td> 
      <td>{{$value.wordName}}</td>     
      <td>{{$value.createtime  | dateFmt }}</td>     
      <td>{{$value.wordType}}</td> 
       <td>
       {{if $value.oosFileName!=null}}
        <a href="{{$value.oosFileName}}" target="_blank" class="btn btn-xs btn-danger"> 查看  </a>
       {{else}}
         #
       {{/if}}
       </td>
      <td>    
       <a href="javascript:void(0);"  onclick="getSkip('{{$value.id}}','{{$value.wordType}}')"  target="_blank" class="btn btn-xs btn-danger">点击查看</a>
      </td> 
     </tr>     
     {{/each}}
    </tbody>     
</script>
   </table> 



 
  </div>   
  <script>
	function sea(){
$(".seach").addClass("sea");
$(".bg").addClass("bg2");	
		$("table").show()
	}	


    $('#getList').click(function () {

var reg = /(^\d{15}$)|(^\d{18}$)|(^\d{17}(\d|X|x)$)/; 
	var card=$("#id_num").val();
